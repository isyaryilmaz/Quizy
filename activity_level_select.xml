<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seviye Seçimi"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#DC2626"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Öğrenmek istediğin zorluk seviyesini belirle"
        android:textSize="16sp"
        android:textColor="#6B7280"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/cardBeginner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_card_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Başlangıç (A1)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2563EB"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temel kelimeler ve basit kalıplar"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginTop="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardIntermediate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_card_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardBeginner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orta (B1)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#D97706"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Günlük kullanım ve sosyal terimler"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginTop="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardAdvanced"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_card_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardIntermediate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İleri (C1)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#059669"/> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akademik ve profesyonel kelime dağarcığı"
        android:textSize="14sp"
        android:textColor="#4B5563"
        android:layout_marginTop="6dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>